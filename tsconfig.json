{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node",
        "allowJs": true
    },
    "include": [
        "src/**/*",
        "src/tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}